#!/bin/sh

current_song=$(mpc current --format "%title%")
artist=$(mpc current --format "%artist%")
album=$(mpc current --format "%album%")

if [ -z "$album" ]; then
	notify-send -u normal -t 4000 -- "$current_song" "by <i>$artist</i>"
else
	notify-send -u normal -t 4000 -- "$current_song" "by <i>$artist</i>\nfrom $album"
fi
